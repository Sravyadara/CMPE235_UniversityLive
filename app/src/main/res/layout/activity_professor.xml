<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/plainscreen"
    tools:context="com.gimbal.android.sample.ProfessorActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/updateurl"
        android:id="@+id/updateurl"
        android:layout_below="@+id/textView15"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/attendance"
        android:id="@+id/btn_attendance"
        android:layout_alignTop="@+id/btn_appointments"
        android:layout_toLeftOf="@+id/txt_updateurl"
        android:layout_toStartOf="@+id/txt_updateurl" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/appointmentsprof"
        android:id="@+id/btn_appointments"
        android:onClick="showlist"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/imageView3"
        android:layout_toRightOf="@+id/txt_updateurl"
        android:layout_toEndOf="@+id/txt_updateurl" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/btn_logout"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="logout" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView3"
        android:background="@drawable/teachermaleicon"
        android:layout_below="@+id/btn_logout"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Attendence"
        android:typeface="serif"
        android:textColor="#000000"
        android:id="@+id/textView15"
        android:layout_below="@+id/btn_attendance"
        android:layout_alignRight="@+id/btn_attendance"
        android:layout_alignEnd="@+id/btn_attendance" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Appointments"
        android:id="@+id/textView16"
        android:typeface="serif"
        android:textColor="#000000"
        android:layout_below="@+id/btn_appointments"
        android:layout_toLeftOf="@+id/btn_logout"
        android:layout_toStartOf="@+id/btn_logout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update material"
        android:id="@+id/txt_updateurl"
        android:layout_below="@+id/updateurl"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
