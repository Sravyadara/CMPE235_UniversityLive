<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/plainscreen"
    tools:context="com.gimbal.android.sample.AdminPage">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manageSensors"
        android:background="@drawable/managesensors"
        android:layout_alignTop="@+id/listSensors"
        android:layout_alignRight="@+id/locateSensors"
        android:layout_alignEnd="@+id/locateSensors" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/btn_logout"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="logout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listSensors"
        android:background="@drawable/listsensors"
        android:layout_below="@+id/textView17"
        android:layout_alignRight="@+id/textView17"
        android:layout_alignEnd="@+id/textView17" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locateSensors"
        android:background="@drawable/locatesensor"
        android:layout_alignTop="@+id/addSensor"
        android:layout_alignRight="@+id/imageView4"
        android:layout_alignEnd="@+id/imageView4" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addSensor"
        android:background="@drawable/addsensor"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/imageView4"
        android:layout_alignLeft="@+id/imageView4"
        android:layout_alignStart="@+id/imageView4" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/imageView4"
        android:background="@drawable/admin"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Add Sensor"
        android:id="@+id/textView17"
        android:typeface="serif"
        android:textColor="#000000"
        android:layout_below="@+id/addSensor"
        android:layout_alignRight="@+id/addSensor"
        android:layout_alignEnd="@+id/addSensor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Locate Sensors"
        android:id="@+id/textView18"
        android:typeface="serif"
        android:textColor="#000000"
        android:layout_alignTop="@+id/textView17"
        android:layout_alignLeft="@+id/locateSensors"
        android:layout_alignStart="@+id/locateSensors" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="List Sensors"
        android:id="@+id/textView19"
        android:typeface="serif"
        android:textColor="#000000"
        android:layout_below="@+id/listSensors"
        android:layout_alignRight="@+id/listSensors"
        android:layout_alignEnd="@+id/listSensors" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Manage Sensors"
        android:typeface="serif"
        android:textColor="#000000"
        android:id="@+id/textView20"
        android:layout_below="@+id/manageSensors"
        android:layout_alignRight="@+id/textView18"
        android:layout_alignEnd="@+id/textView18" />



    <!--<fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"

        />-->


</RelativeLayout>
