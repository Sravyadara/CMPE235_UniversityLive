<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.gimbal.android.sample.AdminPage">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage Sensors"
        android:id="@+id/manageSensors"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Sensors"
        android:id="@+id/listSensors"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/manageSensors"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locate Sensors"
        android:id="@+id/locateSensors"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/manageSensors"
        android:layout_alignStart="@+id/manageSensors" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Sensor"
        android:id="@+id/addSensor"
        android:layout_below="@+id/locateSensors"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp" />


    <!--<fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:name="com.google.android.gms.maps.MapFragment"
        android:id="@+id/map"

        />-->


</RelativeLayout>
